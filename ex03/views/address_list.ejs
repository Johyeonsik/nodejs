<table id = "tbl"></table>
<script id="temp" type="text/x-handlebars-template">
    <tr>
        <td colspan="4" >
            <a href="/address/insert" style="color: mediumseagreen;">주소등록</a>
        </td>
    </tr>
  <tr class="title">
    <td width=100>번호</td>
    <td width=100>성명</td>
    <td width=200>전화</td>
    <td width=300>주소</td>
  </tr>
  {{#each .}}
  <tr class ="row" onclick ="location.href='/address/read?id={{id}}'">
    <td>{{id}}</td>
    <td>{{name}}</td>
    <td>{{tel}}</td>
    <td>{{address}}</td>
  </tr>
  {{/each}}
</script>

<script>
    getAddress();


    function getAddress(){
      $.ajax({
        type: "get",
        dataType: "json",
        url:"/address",
        success:function(data){
          var template = Handlebars.compile($("#temp").html());
          $("#tbl").html(template(data));
        }
        
      });
    }
    </script>